@model WebApplication5.Models.ReportViewModel

@{
    ViewBag.Title = "Report";

    var hasStart = Request.QueryString["startDate"];
    var hasEnd = Request.QueryString["endDate"];
    bool hasFilter = !string.IsNullOrEmpty(hasStart) && !string.IsNullOrEmpty(hasEnd);
}

<style>
    .report-filter {
        text-align: center;
        margin-top: 40px;
        margin-bottom: 30px;
    }

        .report-filter form {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 10px;
        }

        .report-filter label {
            font-weight: 600;
            margin-right: 5px;
        }

        .report-filter input[type="date"] {
            width: 160px;
        }
</style>

<div class="report-filter">
    <h3 class="text-primary mb-2">Use Filter To Get Issue Report</h3>
    <form method="get" id="reportForm" class="d-inline-flex align-items-center gap-2">
        <label for="startDate">From:</label>
        <input type="date" id="startDate" name="startDate" required />

        <label for="endDate">To:</label>
        <input type="date" id="endDate" name="endDate" required />

        <button type="submit" class="btn btn-primary">Get Report</button>
        <button type="button" class="btn btn-secondary" onclick="clearReportData()">Clear Data</button>
    </form>
</div>

@if (hasFilter && Model != null && Model.DetailedReports != null && Model.DetailedReports.Any())
{
    <div id="detailedReportSection">
        <h2>Detailed Issue Report</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Material</th>
                    <th>Issued To</th>
                    <th>Role</th>
                    <th>Requested Quantity</th>
                    <th>Issued Date</th>
                    <th>Issued Quantity</th>
                    <th>Closing Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DetailedReports)
                {
                    <tr>
                        <td>@item.MaterialName</td>
                        <td>@item.IssuedTo</td>
                        <td>@item.Role</td>
                        <td>@item.RequestedQuantity</td>
                        <td>@item.IssuedDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.IssuedQuantity</td>
                        <td>@item.ClosingQuantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-3">
        <button type="button" class="btn btn-secondary" onclick="printSection('detailedReportSection')">Print Detailed Report</button>
    </div>

    if (Model.SummaryReports != null && Model.SummaryReports.Any())
    {
        <div id="summaryReportSection" class="mt-4">
            <h2>Summary Report</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Material</th>
                        <th>Total Issued Quantity</th>
                        <th>Latest Closing Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var summary in Model.SummaryReports)
                    {
                        <tr>
                            <td>@summary.MaterialName</td>
                            <td>@summary.TotalIssuedQuantity</td>
                            <td>@summary.ClosingQuantity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-3">
            <button type="button" class="btn btn-secondary" onclick="printSection('summaryReportSection')">Print Summary Report</button>
        </div>
    }
}
else if (hasFilter)
{
    <p class="text-center">No data available for the selected date range.</p>
}

<script>
    function printSection(sectionId) {
        var printContent = document.getElementById(sectionId).innerHTML;
        var originalContent = document.body.innerHTML;

        document.body.innerHTML = printContent;
        window.print();
        document.body.innerHTML = originalContent;
        location.reload();
    }
    function clearReportData() {
        // Remove detailed report table
        const detailedSection = document.getElementById('detailedReportSection');
        if (detailedSection) detailedSection.innerHTML = '';

        // Remove summary report table
        const summarySection = document.getElementById('summaryReportSection');
        if (summarySection) summarySection.innerHTML = '';

        // Optional: reset form inputs
        document.getElementById('reportForm').reset();
    }
</script>
