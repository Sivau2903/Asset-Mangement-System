@model IEnumerable<WebApplication5.Models.Asset>

@{
    Layout = "~/Views/Shared/_NodelLayout.cshtml";
    ViewBag.Title = "Issue QR Codes";
}

<h2>Issue QR Codes</h2>

@using (Html.BeginForm("IssueQRCode", "NodeOfficer", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Select</th>
                <th>Serial Number</th>
                <th>Asset Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedAssetIds" value="@item.AssetId" />
                    </td>
                    <td>@item.SerialNumber</td>
                    <td>@item.AssetName</td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-info mt-3">Issue QR Codes</button>
    <a href="@Url.Action("Dashboard", "NodelOfficer")" class="btn btn-secondary mt-3">Back</a>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}
